#!/usr/bin/env node

(async () => {
  const distIndexPath = './cli.cjs';

  const buildCli = () => {
    const execSync = require('child_process').execSync;
    execSync('yarn cli:build', { stdio: 'inherit', cwd: __dirname });
  };

  const runCli = () => require(distIndexPath);

  try {
    runCli();
  } catch (error) {
    const distExist = require('fs').existsSync(distIndexPath);
    if (!distExist) {
      await buildCli();
      await runCli();
      return;
    }
    console.error(error);
    process.exit(1);
  }
})();
